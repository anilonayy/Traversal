
@using Traversal.Models.Login
@model UserRegisterViewModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Merhaba!</h5>
							<h3>Hesap Oluşturun</h3>
							<p>
								Lorem ipsum, dolor sit amet consectetur adipisicing elit. Est natus facere aperiam!
								Tenetur maiores dolore a quod pariatur ut voluptates quae saepe ea quasi laudantium,
								iste molestias inventore fuga assumenda.
							</p>
							<a href="#/" class="read-more-1 btn">Hadi!</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Kayıt Ol</h4>
						<p>Hesap Oluşturun, Tamamen Ücretsiz.</p>
					</div>
					<form  asp-action="SignUp" asp-controller="Login" method="post" class="signin-form">
						<div class="form-input">
							<label>Ad</label>
							<input type="text" asp-for="Name" />
                            <span asp-validation-for="Name" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Soyad</label>
							<input type="text" asp-for="Surname"  />
							<span asp-validation-for="Surname" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>E-Mail</label>
							<input type="email" asp-for="Email"  />
							<span asp-validation-for="Email" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Kullanıcı Adı</label>
							<input type="text" asp-for="Username" />
							<span asp-validation-for="Username" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Şifre</label>
							<input type="password" asp-for="Password" />
							<span asp-validation-for="Password" style="color:red"></span>
						</div>
						<div class="form-input">
							<label>Şifre Doğrula</label>
							<input type="password" asp-for="ConfrimPassword" />
							<span asp-validation-for="ConfrimPassword" style="color:red"></span>
						</div>

                        <div style="color:red" asp-validation-summary="ModelOnly">

						</div>

						<button type="submit" class="btn">Hesap Oluştur</button>
					</form>
					
				</div>

			</div>

		</div>
	</section>

	@*<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
</body>

</html>